{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}}</title>
    <link rel="stylesheet" href="/receitas.css">
{% endblock %}

{% block content %}
    <section>
        <div class="recipe">

            <div class="card" id="{{item.id}}">
                <div class="card-image">
                    <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
                </div>
                <div class="card-content-recipe">
                    <p>{{ item.title }}</p>
                </div>
                <div class="card-info-recipe">
                    <span>por
                        {{ item.author }}
                    </span>
                </div>

                <div class="card-ingredientes-recipe">
                    <div class="title-hide">
                        <h1>Ingredientes</h1>
                        <button id="btn">Mostrar/Esconder</button>
                    </div>
                    <ul>
                        {% for ingredient in item.ingredients %}
                            <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="card-preparacao-recipe">
                    <div class="title-hide">
                        <h1>Modo de preparo</h1>
                        <button id="button">Mostrar/Esconder</button>
                    </div>
                    <ul>
                        {% for prepar in item.preparation%}
                            <li>{{prepar}}</li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="card-add-info">
                    <div class="title-hide">
                        <h1>Informa√ßoes adicionais</h1>
                        <button id="botao" type="Submit">Mostrar/Esconder</button>
                    </div>

                    <p>{{item.information}}</p>
                </div>

            </div>

        </div>

        <script src="/scripts.js"></script>

    {% endblock %}